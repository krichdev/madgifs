<h1 class="text-center">Sign Up</h1>
<form action="/auth/signup" class="col-sm-6 col-sm-offset-3"method="POST">
  <div class="form-group">
    <input type="text" name="email" class="form-control text-center" placeholder="Enter Email Address">
  </div>
  <div class="form-group">
    <input type="text" name="username" class="form-control text-center" placeholder="Enter Username">
  </div>
  <div class="form-group">
    <input type="password" name="password" class="form-control text-center" placeholder="Enter Password">
  </div>
  <input type="submit" value="Sign Up" class="btn btn-success center-block up-btn">
</form>
